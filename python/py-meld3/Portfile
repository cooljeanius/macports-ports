if {${name} ne ${subport}} {
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} TODO.txt LICENSE.txt \
            COPYRIGHT.txt CONTRIBUTORS.txt README.txt CHANGES.txt \
            ${destroot}${docdir}
    }

    test.run        yes
}
